<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bExample"
        android:layout_width="408dp"
        android:layout_height="62dp"
        android:text="Example"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="230dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bEx1"
        android:layout_width="424dp"
        android:layout_height="61dp"
        android:text="Exercise 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bExample"
        app:layout_constraintTop_toBottomOf="@+id/bExample" />

    <Button
        android:id="@+id/bEx2"
        android:layout_width="425dp"
        android:layout_height="53dp"
        android:text="Exercise 2"
        app:layout_constraintTop_toBottomOf="@+id/bEx1"
        tools:layout_editor_absoluteX="-4dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bEx3"
        android:layout_width="410dp"
        android:layout_height="62dp"
        android:text="Exercise 3"
        app:layout_constraintTop_toBottomOf="@+id/bEx2"
        tools:layout_editor_absoluteX="2dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>